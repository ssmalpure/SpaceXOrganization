<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingStart="@dimen/widget_margin"
    android:paddingEnd="@dimen/widget_margin"
    android:paddingTop="15dp"
    android:orientation="horizontal"
    android:paddingBottom="15dp">

    <LinearLayout
        android:id="@+id/lyt_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_widget_mission_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_widget_mission_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_widget_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_refresh_24dp"
        android:background="@color/colorPrimary"
        android:layout_weight="3"
        android:contentDescription="@string/tag_widget_refresh" />

</LinearLayout>